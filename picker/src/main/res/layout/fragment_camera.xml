<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/Theme.MaterialComponents.Light.NoActionBar"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ir.shahabazimi.instagrampicker.gallery.AutoFitTextureView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/c_texture"
        android:layout_width="match_parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/c_change"
        android:layout_margin="6dp"
        android:src="@mipmap/ic_front"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="@id/c_texture"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="35dp"
        android:layout_height="35dp"/>


    <ImageView
        android:id="@+id/c_capture"
        android:src="@drawable/shutter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/c_texture"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="80sp"
        android:layout_height="80sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>